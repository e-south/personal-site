{
  "name": "personal-site",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "typecheck": "astro check",
    "test": "vitest run",
    "verify": "npm run format:check && npm run lint && npm run typecheck && npm run test && npm run build",
    "clean": "rm -rf .astro node_modules/.astro dist",
    "audit": "npm audit",
    "audit:prod": "npm audit --omit=dev",
    "prepare": "husky install",
    "newsletter:send": "tsx scripts/newsletter/send.ts",
    "newsletter:stats": "tsx scripts/newsletter/stats.ts"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10.8.2",
  "lint-staged": {
    "*.{js,ts,mjs,astro,json,md,mdx,css,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,ts,mjs,astro}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^6.0.2",
    "@fontsource-variable/fraunces": "^5.2.9",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@fontsource-variable/manrope": "^5.2.8",
    "@fontsource-variable/source-serif-4": "^5.2.9",
    "astro": "^5.16.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.19"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@eslint/js": "^9.39.2",
    "@tailwindcss/typography": "^0.5.19",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "cheerio": "^1.0.0-rc.12",
    "daisyui": "^5.5.14",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "tsx": "^4.19.4",
    "typescript": "5.5.4",
    "vitest": "^4.0.16"
  }
}
