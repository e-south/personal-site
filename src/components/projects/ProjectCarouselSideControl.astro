---
/*
--------------------------------------------------------------------------------
personal-site
src/components/projects/ProjectCarouselSideControl.astro

Renders one side control button for the projects carousel.

Module Author(s): Eric J. South
--------------------------------------------------------------------------------
*/

type Props = {
  direction: 'prev' | 'next';
};

const { direction } = Astro.props as Props;

const isNext = direction === 'next';
const label = isNext ? 'Next' : 'Prev';
const ariaLabel = isNext ? 'Next project' : 'Previous project';
const iconClass = isNext
  ? 'project-carousel-button__icon project-carousel-button__icon--next'
  : 'project-carousel-button__icon project-carousel-button__icon--prev';
const buttonClass = isNext
  ? 'focus-ring pointer-events-auto project-carousel-button project-carousel-button--next'
  : 'focus-ring pointer-events-auto project-carousel-button';
const iconPath = isNext ? 'M9.5 6.5 15 12l-5.5 5.5' : 'M14.5 6.5 9 12l5.5 5.5';
const controlDataAttr = isNext
  ? { 'data-carousel-next': true }
  : { 'data-carousel-prev': true };
---

<button
  type="button"
  class={buttonClass}
  aria-label={ariaLabel}
  {...controlDataAttr}
>
  <svg
    class={iconClass}
    viewBox="0 0 24 24"
    aria-hidden="true"
    focusable="false"
  >
    <path
      d={iconPath}
      fill="none"
      stroke="currentColor"
      stroke-width="1.8"
      stroke-linecap="round"
      stroke-linejoin="round"></path>
  </svg>
  <span class="project-carousel-button__label">{label}</span>
</button>
