import ProjectCarouselNav from '@/components/projects/ProjectCarouselNav.astro';
import ProjectPanel from '@/components/projects/ProjectPanel.astro';
import type { ProjectPanel as ProjectPanelType } from '@/lib/projects';
import { hashToHue } from '@/lib/colors';

type Props = {
  projects: ProjectPanelType[];
  class?: string;
};

const { projects, class: className } = Astro.props as Props;

if (!Array.isArray(projects) || projects.length === 0) {
  throw new Error('Project carousel is missing projects.');
}

const classes = [
  'relative flex flex-col gap-4 project-carousel',
  className ?? '',
]
  .join(' ')
  .trim();
const pastelHue = hashToHue('projects-carousel');

const projectMeta = projects.map((project) => {
  const slug = project.entry.slug;
  if (!slug) {
    throw new Error('Project entry slug is missing.');
  }
  return {
    id: `project-${slug}`,
    title: project.entry.data.title,
  };
});
---

<section
  class={classes}
  data-project-carousel
  aria-roledescription="carousel"
  aria-label="Projects carousel"
  style={`--pill-hue:${pastelHue};`}
>
  <div class="project-carousel-frame relative">
    <div class="project-carousel-grid grid">
      <div class="pointer-events-none col-start-1 row-start-1 z-10">
        <div class="story-carousel-side">
          <button
            type="button"
            class="pointer-events-auto project-carousel-button shadow-sm backdrop-blur focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent"
            data-carousel-prev
            aria-label="Previous project"
          >
            <span class="project-carousel-button__cap" aria-hidden="true">
              <svg
                class="project-carousel-button__icon project-carousel-button__icon--prev"
                viewBox="0 0 24 24"
                aria-hidden="true"
                focusable="false"
              >
                <path
                  d="M14.5 6.5 9 12l5.5 5.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.8"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </span>
            <span class="project-carousel-button__label">Prev</span>
          </button>
        </div>
      </div>
      <div class="pointer-events-none col-start-1 row-start-1 z-10">
        <div class="story-carousel-side story-carousel-side--right">
          <button
            type="button"
            class="pointer-events-auto project-carousel-button project-carousel-button--next shadow-sm backdrop-blur focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent"
            data-carousel-next
            aria-label="Next project"
          >
            <span class="project-carousel-button__cap" aria-hidden="true">
              <svg
                class="project-carousel-button__icon project-carousel-button__icon--next"
                viewBox="0 0 24 24"
                aria-hidden="true"
                focusable="false"
              >
                <path
                  d="M9.5 6.5 15 12l-5.5 5.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.8"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </span>
            <span class="project-carousel-button__label">Next</span>
          </button>
        </div>
      </div>
      <div class="col-start-1 row-start-1">
        <div
          class="project-carousel-track h-full overflow-x-auto overflow-y-hidden overscroll-x-contain rounded-3xl bg-base-200/20"
          data-carousel-track
          tabindex="0"
          aria-label="Projects"
        >
          {
            projects.map((project, index) => (
              <ProjectPanel
                project={project}
                index={index}
                total={projects.length}
              />
            ))
          }
        </div>
      </div>
    </div>
  </div>

  <p class="project-carousel-hint" aria-hidden="true">Swipe to explore</p>

  <ProjectCarouselNav projects={projectMeta} position="bottom" />
</section>

<script type="module" is:inline data-astro-rerun>
  const initProjectCarousel = () => {
    const carousel = document.querySelector('[data-project-carousel]');
    if (!(carousel instanceof HTMLElement)) {
      return;
    }

    if (carousel.dataset.carouselReady === 'true') {
      return;
    }
    carousel.dataset.carouselReady = 'true';

    const track = carousel.querySelector('[data-carousel-track]');
    if (!(track instanceof HTMLElement)) {
      throw new Error('[projects-carousel] Track element not found.');
    }

    const panels = Array.from(
      track.querySelectorAll('[data-carousel-panel]'),
    ).filter((panel) => panel instanceof HTMLElement);

    if (panels.length === 0) {
      throw new Error('[projects-carousel] No panels found.');
    }

    const dots = Array.from(
      carousel.querySelectorAll('[data-carousel-dot]'),
    ).filter((dot) => dot instanceof HTMLButtonElement);

    if (dots.length === 0 || dots.length % panels.length !== 0) {
      throw new Error(
        '[projects-carousel] Dot count does not match panel count.',
      );
    }

    const prevButtons = Array.from(
      carousel.querySelectorAll('[data-carousel-prev]'),
    ).filter((button) => button instanceof HTMLButtonElement);

    const nextButtons = Array.from(
      carousel.querySelectorAll('[data-carousel-next]'),
    ).filter((button) => button instanceof HTMLButtonElement);

    const prefersReducedMotion = window.matchMedia(
      '(prefers-reduced-motion: reduce)',
    );

    const total = panels.length;
    let activeIndex = 0;

    const wrapIndex = (index) => ((index % total) + total) % total;
    const getBehavior = () =>
      prefersReducedMotion.matches ? 'auto' : 'smooth';

    const setActiveIndex = (nextIndex) => {
      activeIndex = wrapIndex(nextIndex);
      dots.forEach((dot) => {
        const dotIndex = Number(dot.dataset.index);
        if (!Number.isInteger(dotIndex)) {
          throw new Error('[projects-carousel] Dot index is invalid.');
        }
        const isActive = dotIndex === activeIndex;
        dot.dataset.active = String(isActive);
        dot.setAttribute('aria-current', isActive ? 'true' : 'false');
      });
      carousel.dataset.activeIndex = String(activeIndex);
    };

    const scrollToIndex = (nextIndex) => {
      const wrapped = wrapIndex(nextIndex);
      const panel = panels[wrapped];
      if (!panel) {
        throw new Error('[projects-carousel] Target panel is missing.');
      }
      const trackRect = track.getBoundingClientRect();
      const panelRect = panel.getBoundingClientRect();
      track.scrollTo({
        left: track.scrollLeft + (panelRect.left - trackRect.left),
        behavior: getBehavior(),
      });
    };

    prevButtons.forEach((button) => {
      button.addEventListener('click', () => {
        scrollToIndex(activeIndex - 1);
      });
    });

    nextButtons.forEach((button) => {
      button.addEventListener('click', () => {
        scrollToIndex(activeIndex + 1);
      });
    });

    dots.forEach((dot) => {
      const index = Number(dot.dataset.index);
      if (!Number.isInteger(index)) {
        throw new Error('[projects-carousel] Dot index is invalid.');
      }
      dot.addEventListener('click', () => {
        scrollToIndex(index);
      });
    });

    track.addEventListener('keydown', (event) => {
      if (event.key === 'ArrowLeft') {
        event.preventDefault();
        scrollToIndex(activeIndex - 1);
      }
      if (event.key === 'ArrowRight') {
        event.preventDefault();
        scrollToIndex(activeIndex + 1);
      }
      if (event.key === 'Home') {
        event.preventDefault();
        scrollToIndex(0);
      }
      if (event.key === 'End') {
        event.preventDefault();
        scrollToIndex(total - 1);
      }
    });

    const observer = new IntersectionObserver(
      (entries) => {
        const visible = entries.filter((entry) => entry.isIntersecting);
        if (visible.length === 0) return;
        const mostVisible = visible.reduce((best, entry) =>
          entry.intersectionRatio > best.intersectionRatio ? entry : best,
        );
        const index = Number(mostVisible.target.dataset.index);
        if (!Number.isInteger(index)) {
          throw new Error('[projects-carousel] Panel index is invalid.');
        }
        setActiveIndex(index);
      },
      {
        root: track,
        threshold: [0.45, 0.6, 0.75],
      },
    );

    panels.forEach((panel) => observer.observe(panel));
    setActiveIndex(0);
  };

  initProjectCarousel();
</script>

<style>
  .project-carousel {
    min-height: 70vh;
    min-height: 70svh;
    min-height: 70dvh;
  }

  .project-carousel-frame {
    flex: 1 1 auto;
    min-height: 0;
    width: 100%;
    min-width: 0;
  }

  .project-carousel-grid {
    height: 100%;
    width: 100%;
    min-width: 0;
  }

  .project-carousel-track {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: 100%;
    scroll-snap-type: x proximity;
    scroll-padding-inline: clamp(1rem, 4vw, 1.5rem);
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
    touch-action: pan-x pan-y;
  }

  .project-carousel-track::-webkit-scrollbar {
    display: none;
  }

  @media (min-width: 768px) {
    .project-carousel-track {
      scroll-snap-type: x mandatory;
    }
  }

  @media (min-width: 768px) {
    .project-carousel {
      min-height: 80vh;
      min-height: 80svh;
      min-height: 80dvh;
    }
  }

  @media (max-width: 767px) {
    .project-carousel-frame {
      flex: 0 0 auto;
      min-height: auto;
    }

    .project-carousel-grid {
      height: auto;
    }
  }

  .project-carousel-button {
    --control-height: 2.6rem;
    display: inline-flex;
    align-items: center;
    gap: 0;
    padding: 0;
    min-height: var(--control-height);
    border-radius: 999px;
    border: 1px solid hsl(var(--pill-hue) 65% 60% / 0.35);
    background-color: hsl(var(--pill-hue) 65% 60% / 0.18);
    color: hsl(var(--pill-hue) 70% 82%);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: none;
    overflow: hidden;
    transition:
      background-color 0.2s ease,
      border-color 0.2s ease,
      color 0.2s ease;
  }

  .project-carousel-button__cap {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: var(--control-height);
    min-width: var(--control-height);
    height: var(--control-height);
    background-color: hsl(var(--pill-hue) 65% 60% / 0.32);
    border-inline-end: 1px solid hsl(var(--pill-hue) 65% 60% / 0.45);
    transition:
      background-color 0.2s ease,
      border-color 0.2s ease;
  }

  .project-carousel-button--next {
    flex-direction: row-reverse;
  }

  .project-carousel-button--next .project-carousel-button__cap {
    border-inline-end: 0;
    border-inline-start: 1px solid hsl(var(--pill-hue) 65% 60% / 0.45);
  }

  .project-carousel-button__label {
    padding: 0 0.95rem;
    line-height: 1;
  }

  .project-carousel-button__icon {
    width: 1.05rem;
    height: 1.05rem;
    display: block;
  }

  .project-carousel-button:hover {
    background-color: hsl(var(--pill-hue) 65% 60% / 0.26);
    border-color: hsl(var(--pill-hue) 65% 60% / 0.55);
    color: hsl(var(--pill-hue) 75% 90%);
  }

  .project-carousel-button:hover .project-carousel-button__cap {
    background-color: hsl(var(--pill-hue) 65% 60% / 0.4);
    border-color: hsl(var(--pill-hue) 65% 60% / 0.6);
  }

  .story-carousel-side {
    position: sticky;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    justify-content: flex-start;
    padding: 0 0.75rem;
  }

  .story-carousel-side--right {
    justify-content: flex-end;
  }

  @media (max-width: 767px) {
    .story-carousel-side {
      display: none;
    }

    .project-carousel-button {
      --control-height: 2.2rem;
      font-size: 0.7rem;
      letter-spacing: 0.06em;
    }

    .project-carousel-button__label {
      padding: 0 0.7rem;
    }
  }

  .project-carousel-hint {
    display: none;
    text-align: center;
    font-size: 0.7rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: color-mix(in oklab, currentColor 55%, transparent);
  }

  @media (max-width: 767px) {
    .project-carousel-hint {
      display: block;
      margin-top: 0.25rem;
    }
  }
</style>
