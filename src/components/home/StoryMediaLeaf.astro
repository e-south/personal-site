---
import type { StoryMediaItem, StoryMediaLeafItem } from '@/data/storyMedia';

type Props = {
  item: StoryMediaLeafItem;
  eager?: boolean;
  frameOverride?: StoryMediaItem['frame'];
};

const { item, eager = false, frameOverride } = Astro.props as Props;

const frameHeights = {
  xs: 40,
  sm: 56,
  md: 66,
  lg: 76,
  xl: 84,
} as const;

const getFrameHeight = (frame?: StoryMediaItem['frame']) =>
  frame ? frameHeights[frame] : frameHeights.md;

const getMediaSizing = (media: StoryMediaLeafItem) => {
  if (media.kind === 'image') {
    return {
      maxWidth: media.image.width,
      ratio: `${media.image.width} / ${media.image.height}`,
    };
  }
  if (!media.poster) {
    throw new Error(`Story video "${media.id}" is missing a poster.`);
  }
  return {
    maxWidth: media.poster.width,
    ratio: `${media.poster.width} / ${media.poster.height}`,
  };
};

const effectiveFrame = frameOverride ?? item.frame;
const { maxWidth, ratio } = getMediaSizing(item);
const maxHeight = getFrameHeight(effectiveFrame);
---

<figure
  class="story-media-frame"
  style={`--story-media-max: ${maxWidth}px; --story-media-height: ${maxHeight}vh; --story-media-height-svh: ${maxHeight}svh; --story-media-height-dvh: ${maxHeight}dvh; aspect-ratio: ${ratio};`}
>
  <div class="story-media-surface">
    {
      item.kind === 'image' ? (
        <img
          src={item.image.src}
          alt={item.alt}
          width={item.image.width}
          height={item.image.height}
          loading={eager ? 'eager' : 'lazy'}
          decoding="async"
          class="story-media-asset"
        />
      ) : (
        <video
          class="story-media-asset"
          data-story-video
          data-story-video-src={item.src}
          muted
          loop
          playsinline
          preload="none"
          poster={item.poster.src}
          aria-label={item.alt}
        />
      )
    }
  </div>
  {
    item.caption && (
      <figcaption class="story-media-caption liquid-caption">
        {item.caption}
      </figcaption>
    )
  }
</figure>

<style>
  .story-media-frame {
    position: relative;
    width: fit-content;
    max-width: min(var(--story-media-max, 720px), var(--story-media-cap, 100%));
    max-height: var(--story-media-height, 70vh);
    max-height: var(--story-media-height-svh, var(--story-media-height, 70vh));
    max-height: var(
      --story-media-height-dvh,
      var(--story-media-height-svh, var(--story-media-height, 70vh))
    );
    margin: 0 auto;
    display: flex;
    justify-content: center;
    border-radius: var(--site-radius-card);
    overflow: hidden;
    padding: 0;
    box-shadow: var(--site-shadow-1);
  }

  .story-media-surface {
    position: relative;
    display: inline-block;
    max-width: 100%;
    background: transparent;
    border-radius: inherit;
    overflow: hidden;
    padding: 0;
  }

  .story-media-asset {
    width: auto;
    height: auto;
    max-width: min(100%, var(--story-media-cap, 100%));
    max-height: var(--story-media-height, 70vh);
    max-height: var(--story-media-height-svh, var(--story-media-height, 70vh));
    max-height: var(
      --story-media-height-dvh,
      var(--story-media-height-svh, var(--story-media-height, 70vh))
    );
    border-radius: inherit;
    object-fit: contain;
    display: block;
  }

  .story-media-caption {
    position: absolute;
    inset: auto auto 0.75rem auto;
    max-width: calc(100% - 1.5rem);
    width: min(80%, 26rem);
    padding: 0.55rem 0.75rem;
    border-radius: 0.65rem;
    text-align: center;
    font-size: 0.7rem;
    line-height: 1.35;
    letter-spacing: 0.02em;
    text-transform: none;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
  }
</style>
