---
import { template } from '@/settings';

const { class: className } = Astro.props;
const baseClasses =
  'prose prose-lg max-w-none ' +
  'prose-headings:font-header prose-headings:font-black prose-headings:tracking-tight prose-headings:leading-tight ' +
  'prose-h2:text-2xl prose-h2:mt-10 prose-h2:mb-4 ' +
  'prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-3 ' +
  'prose-p:leading-relaxed prose-p:mb-4 prose-p:text-base-content/80 ' +
  'prose-li:mb-2 prose-li:text-base-content/80 prose-li:leading-relaxed ' +
  'prose-li:marker:text-base-content/40 ' +
  'prose-ul:pl-5 prose-ol:pl-5 ' +
  'prose-strong:text-base-content ' +
  'prose-a:text-accent prose-a:no-underline hover:prose-a:underline ' +
  'prose-code:text-accent prose-code:bg-base-200 prose-code:px-1 prose-code:py-0.5 prose-code:rounded ' +
  'prose-blockquote:border-l-4 prose-blockquote:border-base-content/30 prose-blockquote:pl-4 prose-blockquote:italic ' +
  'prose-hr:border-base-content/20 prose-img:rounded-lg prose-img:my-8';
const classes = className ? `${baseClasses} ${className}` : baseClasses;
---

<article
  class:list={[
    classes,
    {
      'font-serif': template.proseFont === 'serif',
      'font-sans': template.proseFont === 'sans',
    },
  ]}
>
  <slot />
</article>
