---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { withBase } from '@/lib/urls';
interface Props {
  listTitle: string;
  listItems: {
    title: string;
    description: string;
    image?: string | ImageMetadata;
    imageAlt?: string;
  }[];
}
const { listTitle, listItems } = Astro.props;
---

<h2 class="text-2xl font-semibold mb-6">{listTitle}</h2>
<div class="space-y-8 mb-12">
  {
    listItems.map((item) => (
      <article class="border-b border-base-content/15 pb-8 last:border-b-0 last:pb-0">
        {item.image && (
          <figure class="aspect-video mb-4 overflow-hidden rounded-xl border border-base-content/10">
            {typeof item.image === 'string' ? (
              <img
                src={withBase(item.image)}
                alt={item.imageAlt ?? item.title}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            ) : (
              <Image
                src={item.image}
                alt={item.imageAlt ?? item.title}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            )}
          </figure>
        )}
        <div class="space-y-2">
          <h3 class="text-xl font-semibold">{item.title}</h3>
          <p class="text-base-content/75 leading-relaxed">{item.description}</p>
        </div>
      </article>
    ))
  }
</div>
