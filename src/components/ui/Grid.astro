---
import { withBase } from '@/lib/urls';
interface Props {
  gridTitle: string;
  gridItems: {
    title: string;
    description: string;
    image?: string;
  }[];
}

const { gridTitle, gridItems } = Astro.props;
---

<h2 class="text-2xl font-semibold mb-6">{gridTitle}</h2>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {
    gridItems.map((item) => (
      <div class="border border-base-content/10 rounded-xl overflow-hidden">
        {item.image && (
          <figure class="aspect-video">
            <img
              src={withBase(item.image)}
              alt={item.title}
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </figure>
        )}
        <div class="p-6 space-y-2">
          <h3 class="text-xl font-semibold">{item.title}</h3>
          <p class="text-base-content/75 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
