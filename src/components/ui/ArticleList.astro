---
interface Props {
  listTitle: string;
  listItems: {
    title: string;
    venue: string;
    year: number;
  }[];
}
const { listTitle, listItems } = Astro.props;
---

<h2 class="text-2xl font-semibold mb-6">{listTitle}</h2>
<div class="space-y-8">
  {
    listItems.map((item) => (
      <article class="border-b border-base-content/15 pb-6 last:border-b-0 last:pb-0">
        <h3 class="text-xl font-semibold mb-2">{item.title}</h3>
        <p class="text-sm text-base-content/70 uppercase tracking-[0.12em]">
          {item.venue} â€¢ {item.year}
        </p>
      </article>
    ))
  }
</div>
