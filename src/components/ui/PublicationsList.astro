---
import { highlightAuthor } from '@/lib/utils';

interface PublicationItem {
  title: string;
  authors: string;
  venue: string;
  year: number;
  link?: string;
  abstract?: string;
}

interface Props {
  elements: PublicationItem[];
}

const { elements } = Astro.props;
---

<ul class="space-y-8">
  {
    elements.map((element) => (
      <li class="group">
        {element.link ? (
          <a
            href={element.link}
            class="block hover:text-accent transition-colors duration-200"
            target="_blank"
            rel="noreferrer"
          >
            <h3 class="text-lg font-bold mb-2">{element.title}</h3>
          </a>
        ) : (
          <h3 class="text-lg font-bold mb-2">{element.title}</h3>
        )}
        <p class="text-base mb-2">
          <span class="font-medium">Authors:</span>{' '}
          <span set:html={highlightAuthor(element.authors)} />
        </p>
        <p class="text-sm mb-3">
          <span class="italic">{element.venue}</span> â€¢ {element.year}
        </p>
        {element.abstract && <p>{element.abstract}</p>}
      </li>
    ))
  }
</ul>
