---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';

import ProfilePictures from '@/assets/profile_pictures.jpg';
import { profile } from '@/settings';
import { getEntry, render } from 'astro:content';

const homeEntry = await getEntry('site', 'home');
const linksEntry = await getEntry('site', 'links');
const { Content } = homeEntry ? await render(homeEntry) : { Content: null };

const homeData = homeEntry?.data;
const linksData = linksEntry?.data;
const name = homeData?.name ?? profile.fullName;
const headline = homeData?.headline ?? '';
const locationLine = homeData?.locationLine ?? linksData?.location ?? '';
const imageCaption = homeData?.imageCaption ?? '';
const microLine = homeData?.microLine ?? '';
---

<Layout showFooter={false}>
  <section
    class="flex min-h-[calc(100vh-9rem)] flex-col justify-between gap-10"
  >
    <div class="grid gap-10 lg:grid-cols-[1.15fr_0.85fr] lg:items-center">
      <div class="space-y-6">
        <div class="space-y-3">
          {
            locationLine && (
              <p class="text-sm uppercase tracking-[0.2em] text-base-content/60 font-sans">
                {locationLine}
              </p>
            )
          }
          <h1 class="text-4xl sm:text-5xl font-semibold tracking-tight">
            {name}
          </h1>
          {
            headline && (
              <h2 class="text-2xl sm:text-3xl text-base-content/80">
                {headline}
              </h2>
            )
          }
        </div>
        <div class="space-y-4 text-lg text-base-content/80 leading-relaxed">
          {Content ? <Content /> : <p>{profile.about}</p>}
        </div>
        {microLine && <p class="text-sm text-base-content/60">{microLine}</p>}
      </div>

      <div class="order-first lg:order-none">
        <div class="relative mx-auto max-w-xs overflow-hidden rounded-3xl">
          <Image
            src={ProfilePictures}
            alt={`Profile picture of ${name}`}
            class="aspect-[4/5] w-full rounded-2xl object-cover"
          />
          {
            imageCaption && (
              <div class="mt-4 text-xs text-base-content/50 font-sans">
                {imageCaption}
              </div>
            )
          }
        </div>
      </div>
    </div>
  </section>
</Layout>
