---
import Layout from '@/layouts/Layout.astro';
import List from '@/components/ui/List.astro';
import { getFeaturedProjectCards, getProjectCards } from '@/lib/content';

const featuredProjects = await getFeaturedProjectCards();
const allProjects = await getProjectCards();
---

<Layout title="Projects">
  <div class="prose max-w-none">
    <h1 class="text-3xl font-bold mb-8">Projects</h1>

    {
      featuredProjects.length > 0 && (
        <section class="mb-12">
          <List listTitle="Featured Projects" listItems={featuredProjects} />
        </section>
      )
    }

    {
      allProjects.length > 0 && (
        <section>
          <List listTitle="All Projects" listItems={allProjects} />
        </section>
      )
    }
  </div>
</Layout>
